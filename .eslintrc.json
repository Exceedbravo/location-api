{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {

        "max-len": ["error", { 
            "code": 100,
            "tabWidth": 4,
            "ignoreComments": true ,
            "ignoreTrailingComments": true,
            "ignoreUrls": true,
            "ignoreTemplateLiterals": true ,
            "ignoreRegExpLiterals": true
        }]
    }
}
